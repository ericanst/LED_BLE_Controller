<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/title_paired_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="paired_devices_list"
        android:visibility="visible"
        android:background="#666666"
        android:textColor="#ffffff"
        android:paddingLeft="10sp" />

    <ListView android:id="@+id/paired_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="true"
        android:layout_weight="1" />

    <TextView android:id="@+id/title_new_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hi"
        android:visibility="visible"
        android:background="#666666"
        android:textColor="#ffffff"
        android:paddingLeft="10sp" />

    <ListView android:id="@+id/new_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="true"
        android:layout_weight="2" />

    <Button android:id="@+id/scanning_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device scan start" />
</LinearLayout>